{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "typeRoots": ["node_modules/phaser/types/", "./types", "node_modules/@types/"],
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@game/*": ["scripts/*"],
      "@scenes/*" : ["scripts/scenes/*"],
      "@objects/*" : ["scripts/objects/*"],
      "@utils/*" : ["scripts/utils/*"],
      "@components/*": ["scripts/components/*"],
      "@constants": ["scripts/constants.ts"],
      "@types": ["scripts/types.ts"]
    }
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
